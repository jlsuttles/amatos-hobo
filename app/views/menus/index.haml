- @active_tab = :menus
- title "Menus", true

#main_content.clear.centered
  .one_third
    %img{ :src => '/images/portrait_funghi.jpg' }
  .two_thirds
    - @menus.each do |menu|
      .box.rounded_10.gradient
        %h2= menu.name
        %p= menu.description
        - menu.items.each do |item|
          %div.item
            %h3= item.name
            %span
              - if item.small_price
                $
                =item.small_price
              - if item.small_price and item.large_price
                \/
              -if item.large_price
                $
                =item.large_price
            %p.clear= item.description