!!! Strict
%html{html_attrs}
  
  %head
    %title
      Amatos Woodfired Pizza -
      = yield(:title) || "Untitled"
    = stylesheet_link_tag 'reset', 'front_site'
    = javascript_include_tag :all
    %script{ :type => 'text/javascript', :src => 'http://ajax.googleapis.com/ajax/libs/jquery/1.3.2/jquery.min.js' }
    %script{ :type => "text/javascript", :src => "http://use.typekit.com/qlu1yzx.js" }
    :javascript 
      try{Typekit.load();}catch(e){}
    = yield(:head)
  
  %body{:class => body_classes}
  
    #container
      
      #header
        #locations.tk-museo-sans
          = render :partial => 'layouts/locations'
        #store_hours.tk-museo-sans
          = render :partial => 'layouts/store_hours'
      
      #navigation.tk-museo-sans.clear
        = render :partial => 'layouts/navigation'
      
      = yield
      
      #footer.clear
        = render :partial => 'layouts/footer'
