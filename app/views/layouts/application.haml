!!! Strict
%html{html_attrs}
  
  %head
    %title
      Amatos Woodfired Pizza -
      = yield(:title) || "Untitled"
    = stylesheet_link_tag 'reset', 'front_site'
    = javascript_include_tag 'http://ajax.googleapis.com/ajax/libs/jquery/1.3.2/jquery.min.js'
    = javascript_include_tag 'application'
    = javascript_include_tag 'http://use.typekit.com/qlu1yzx.js'
    :javascript 
      try{Typekit.load();}catch(e){}
    = yield(:head)
  
  %body{:class => body_classes}
  
    #container
      
      #header
        #logo
          %a{ :href => '/'}
            %img{ :src => '/images/logo_small_125.png', :alt => 'Amato\'s Logo'}
        #locations.tk-museo-sans
          = render :partial => '/layouts/locations'
        #store_hours.tk-museo-sans
          = render :partial => '/layouts/store_hours'
      
      #navigation.tk-museo-sans.clear
        = render :partial => '/layouts/navigation'
      
      = yield
      
      #footer.clear
        = render :partial => '/layouts/footer'
