!!! Strict
%html{html_attrs}
  
  %head
    %title
      Amatos Woodfired Pizza -
      = yield(:title) || "Untitled"
    = stylesheet_link_tag 'reset', 'application'
    = javascript_include_tag :all, :cache => true
    %script{:src => "http://use.typekit.com/qlu1yzx.js", :type => "text/javascript"}
    :javascript
      try{Typekit.load();}catch(e){}
    = yield(:head)
  
  %body{:class => body_classes}
  
    #container
      
      #header
        #locations.tk-museo-sans
          = render :partial => 'layouts/locations'
        #store_hours.tk-museo-sans
          = render :partial => 'layouts/store_hours'
      
      #navigation.tk-museo-sans
        = render :partial => 'layouts/navigation'
      
      #main_content
        - if show_title?
          %h1= yield(:title)
        
        = yield
      
      = render :partial => 'layouts/footer'